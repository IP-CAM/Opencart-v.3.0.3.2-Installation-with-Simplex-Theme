<footer>
    <div class="container-fluid">
        <div id="footer">
            <div class="about-list">
                {% if footer_titles %}
                    {% for footer_title in footer_titles %}
                        {% if loop.first %}
                            <h6>{{ footer_title.title }}</h6>
                            {% if footer_title.sub_title %}
                                <ul>
                                    {% for subtitle in footer_title.sub_title %}
                                        {% if subtitle.href %}
                                            <li><a href="{{ subtitle.href }}">
                                                    {{ subtitle.title }}</a></li>
                                        {% else %}
                                            <li><a href="{{ subtitle.link }}">
                                                    {{ subtitle.title }}</a></li>
                                            </a></li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
            <div class="catalog-list">
                <h6>{{ catalog.title }}</h6>
                <ul>
                    {% for menu in catalog.children %}
                        <li><a href="{{ menu.link }}">
                        {% if menu.description %}
                            {{ menu.description }}
                        {% else %}
                            {{ menu.title }}</a></li>
                        {% endif %}
                        </a></li>
                    {% endfor %}
                </ul>
            </div>
            <ul class="contacts">
                <li>
                    <h5 class="phone">
                        <a class="tel" href="tel:{{ telephone }}">{{ telephone }}</a>
                        <p><a href="#">{{ text_phone_callback }}</a></p>
                    </h5>
                </li>
                <li>
                    <div class="offices">
                        <h6>{{ text_our_stores }}</h6>
                        <ul>
                            {% for location in locations %}
                                <li><a href="{{ location.contacts_link }}">{{ location.city }}
                                        , {{ location.address }}</a></li>
                            {% endfor %}

                        </ul>
                    </div>
                </li>
            </ul>
            <ul class="info">
                <li>
                    <div class="copyright">
                        {{ text_copyright }}
                    </div>
                </li>
                <li>
                    <div class="follow-us">
                        {% if footer_titles %}
                            {% for footer_title in footer_titles %}
                                {% if loop.index==2 %}
                                    {% if footer_title.sub_title %}
                                        <p>{{ text_follow_us }}
                                            {% for subtitle in footer_title.sub_title %}

                                                <a href="{{ subtitle.link }}">
                                                    <img height="16" alt="{{ subtitle.title }}"
                                                         src="catalog/view/theme/simplex/assets/img/{{ subtitle.title }}.svg"></a>
                                            {% endfor %}
                                        </p>

                                    {% endif %}
                                {% endif %}

                            {% endfor %}
                        {% endif %}
                    </div>
                </li>
                <li>
                    <div class="pay-methods">
                        <ul>
                            <li><img alt="Mastercard" src="catalog/view/theme/simplex/assets/img/mastercard.png"></li>
                            <li><img alt="Visa" src="catalog/view/theme/simplex/assets/img/visa.png"></li>
                            <li><img alt="Cash" src="catalog/view/theme/simplex/assets/img/cash.png"></li>
                            <li><img alt="Bank" src="catalog/view/theme/simplex/assets/img/bank.png"></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</footer>
