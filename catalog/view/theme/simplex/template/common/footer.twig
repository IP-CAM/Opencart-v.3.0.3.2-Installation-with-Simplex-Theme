        var phone = $("#customer_phone").val();
        if (phone.length > 3) {

            $.ajax({
                url: url,
                type: 'post',
                data: 'customer_phone=' + phone.trim(),
                dataType: 'json',
                beforeSend: function () {
                },
                complete: function () {
                },
                success: function (json) {
                    if (json["phone_error"]) {
                        $(".input-telephone input").addClass('has-error');
                    } else {
                        //$(".phone-poppup table").hide(300);
                        $(".input-telephone input").removeClass('has-error');
                        $(".input-telephone h6").text(json["result"]);
                        $(".input-telephone input").hide();
                        setTimeout(function () {
                            $('.phone-poppup').css({'opacity': '0'});
