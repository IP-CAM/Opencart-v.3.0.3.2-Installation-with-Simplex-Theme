<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ title }}</title>
  <base href="{{ base }}"/>
  {% if description %}
    <meta name="description" content="{{ description }}"/>
  {% endif %}
  {% if keywords %}
    <meta name="keywords" content="{{ keywords }}"/>
  {% endif %}
  <script src="catalog/view/javascript/simplex/jquery.min.js" type="text/javascript"></script>
{#  <link href="catalog/view/theme/default/stylesheet/bootstrap.css" rel="stylesheet" media="screen"/>#}
  <link href="catalog/view/theme/simplex/stylesheet/style.min.css" rel="stylesheet">

{#  <link href="catalog/view/theme/default/stylesheet/stylesheet.css" rel="stylesheet">#}
  {% for style in styles %}
    <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
  {% endfor %}
  {% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
  {% endfor %}
  <script src="catalog/view/javascript/common.js" type="text/javascript"></script>
  {% for link in links %}
    <link href="{{ link.href }}" rel="{{ link.rel }}"/>
  {% endfor %}
  {% for analytic in analytics %}
    {{ analytic }}
  {% endfor %}
</head>
<body>
{% if cookie %}
  {{ cookie }}
{% endif %}

<header>
  <div id="navigation">
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="{{ home }}">
          <img alt="Logo" src="{{ logo }}">
        </a>
        <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
                class="navbar-toggler collapsed" data-target="#navbarCollapse" data-toggle="collapse"
                type="button">
          <span class="navbar-toggler-icon"></span>
          <span class="navbar-toggler-text">menu</span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              {{ language }}
            </li>
            {{ pavmegamenu }}
          </ul>
          <!--TODO: Collapsed menu-->
        </div>
        <div class="nav-button" id="search">
          <div class="dropdown">
            <a aria-expanded="false" aria-haspopup="true" class="dropdown-toggle" data-toggle="dropdown"
               href="#"
               role="button">
              <img alt="Search" src="catalog/view/theme/simplex/assets/img/search.svg">
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#"><!--TODO: Search--></a>
            </div>
          </div>
        </div>
        <div class="nav-button" id="profile">
          <div class="dropdown">
            <a aria-expanded="false" aria-haspopup="true" class="dropdown-toggle" data-toggle="dropdown"
               href="{{ account }}"
               role="button">
              <img alt="Profile" src="catalog/view/theme/simplex/assets/img/profile.png">
            </a>
            <div class="dropdown-menu">
              <ul>
              {% if logged %}
                <li><a href="{{ account }}">{{ text_account }}</a></li>
                <li><a href="{{ order }}">{{ text_order }}</a></li>
                <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
                <li><a href="{{ download }}">{{ text_download }}</a></li>
                <li><a href="{{ logout }}">{{ text_logout }}</a></li>
              {% else %}
                <li><a href="{{ register }}">{{ text_register }}</a></li>
                <li><a href="{{ login }}">{{ text_login }}</a></li>
              {% endif %}
              </ul>
             {# <a class="dropdown-item" href="#"><!--TODO: Profile--></a>#}
            </div>
          </div>
        </div>
        <div class="nav-button" id="compare">
          <a href="#"><img alt="Compare" src="catalog/view/theme/simplex/assets/img/compare.png"></a>
        </div>
        <div class="nav-button" id="favorite">
          <a id="wishlist-total"  title="{{ text_wishlist }}" href="{{ wishlist }}"><img alt="Favorites" src="catalog/view/theme/simplex/assets/img/favorites.png"><span  class="quantity">{{ wishlist_count }}</span></a>
        </div>
        <div class="nav-button" id="cart">
          <a href="{{ shopping_cart }}"><img alt="Cart" src="catalog/view/theme/simplex/assets/img/cart.png"><span  class="quantity">{{ cart_count }}</span></a>
          <!--TODO: Cart poppup-->
        </div>
        <div class="phone">
          <a class="tel" href="tel:{{ telephone }}"><span>{{ telephone }}</span></a>
        </div>
        <!--TODO: Min screen width 410px. Reordering, resizing or disabling smth. on <410px -->
      </nav>
    </div>
  </div>
  <div id="categories" class="collapse">
    <!--TODO: SVG icons for categories -->
    <div class="container-fluid">
      <nav class="menu">
        <ul>
            {% for category in catalog.children %}
                <li class="menu-item {{ category.active?'active'}} "><a class="menu-link {{ category.menu_class }}" href="{{ category.link }}" >
                        {% if category.image_svg !='' %}
                          {{ category.image_svg }}
                        {% endif %}
                        {{ category.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
      </nav>
    </div>
  </div>
</header>
