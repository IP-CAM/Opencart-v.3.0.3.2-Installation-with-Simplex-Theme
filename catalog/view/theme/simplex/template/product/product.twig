{{ header }}
<main>
    <div class="container-fluid">
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                {% if loop.first %}
                    <li><a href="{{ breadcrumb.href }}"><img alt="Home"
                                                             src="catalog/view/theme/simplex/assets/img/home.svg"></a>
                    </li>
                {% else %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endif %}
            {% endfor %}

        </ul>
        <div id="product" class="product-wrapper">
            <div id="item-card">

                <div class="item-gallery">
                    {% if thumb or images %}
                        <div class="gallery-images">
                            {% if thumb %}
                                <div class="item-image">
                                    <img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}"/>
                                </div>
                            {% endif %}
                            {% if images %}
                                {% for image in images %}
                                    <div class="item-image">
                                        <img src="{{ image.thumb }}" title="{{ heading_title }}"
                                             alt="{{ heading_title }}"/>
                                    </div>
                                {% endfor %}
                            {% endif %}

                        </div>
                        <ul class="gallery-list">
                            {% if thumb %}
                                <li class="item-image">
                                    <img src="{{ popup }}" title="{{ heading_title }}" alt="{{ heading_title }}"/>
                                </li>
                            {% endif %}
                            {% if images %}
                                {% for image in images %}
                                    <li class="item-image">
                                        <img src="{{ image.popup }}" title="{{ heading_title }}"
                                             alt="{{ heading_title }}"/>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    {% endif %}
                </div>
                <div class="page-title">
                    <h1>{{ heading_title }}</h1>
                </div>
                <div class="item-actions">
                    <button class="item-action" onclick="wishlist.add('{{ product_id }}');">
                        <img alt="" src="catalog/view/theme/simplex/assets/img/favorites.png">
                        {{ button_wishlist }}
                    </button>
                    <button class="item-action" onclick="compare.add('{{ product_id }}');">
                        <img alt="" src="catalog/view/theme/simplex/assets/img/compare.png">
                        {{ button_compare }}
                    </button>
                </div>
                <div class="item-price-block">
                    {% if product.special %}
                        <p class="old-price">{{ price }}.-</p>
                        <p class="discount-percent">{{ special_percentage }}%</p>
                        <p class="discount-val">-{{ economy }}</p>
                    {% endif %}
                    {% if product.special %}
                        <p class="price">{{ special }}.-<span class="currency">{{ currency }}</span></p>
                    {% else %}
                        <p class="price">{{ price }}.-<span class="currency">{{ currency }}</span></p>
                    {% endif %}
                </div>
                <div class="cart-wrapper">
                    <div class="quantity">
                        <label><input id="quantity" name="quantity" max="100" min="1" step="1" type="text"
                                      value="1"></label>
                        <button id="button-cart" class="add-to-cart" role="button" type="submit">{{ button_cart }}
                            <span
                                    class="image-container"></span></button>
                        <input type="hidden" name="product_id" value="{{ product_id }}"/>

                    </div>
                </div>
                <div id="seller-warranties">
                    <div class="warranties">
                        <div class="warranty-item">
                            <div class="battery">
                                {% if availability_level >0 %}
                                    <span class="cell"></span>
                                {% endif %}
                                {% if availability_level >1 %}
                                    <span class="cell"></span>
                                {% endif %}
                                {% if availability_level >2 %}
                                    <span class="cell"></span>
                                {% endif %}

                            </div>
                            {% if availability_level %}
                                <p>
                                    {{ text_available_online }}
                                </p>
                                <a href="#">
                                    {{ text_available_in_stores }}
                                </a>
                            {% else %}
                                <p>
                                    {{ text_not_available }}
                                </p>
                            {% endif %}

                        </div>
                        <div class="warranty-item">
                            <img alt="" src="catalog/view/theme/simplex/assets/img/car.png">
                            <p>
                                Livrăm maine
                            </p>
                            <span>gratuit</span>
                        </div>
                        <div class="warranty-item">
                            <img alt="" src="catalog/view/theme/simplex/assets/img/warranty.png">
                            <p>
                                Garanție
                            </p>
                            <span>{{ garanty }} luni</span>
                        </div>
                    </div>
                </div>
                <div class="prof-help">
                    <img alt="" src="catalog/view/theme/simplex/assets/img/step4.png">
                    <p>Ai nevoie de instalare profesională?</p>
                </div>
                <div class="product-code">
                    {% if sku %}
                        <p><span>{{ text_sku }}</span> {{ sku }}</p>
                    {% endif %}
                </div>
            </div>
            <ul class="nav nav-tabs" id="productTabs" role="tablist">
                {% if description %}
                    <li class="nav-item">
                        <a aria-selected="true" class="nav-link active" data-toggle="tab" href="#about1" id="about1-tab"
                           role="tab">{{ tab_description }}</a>
                    </li>
                {% endif %}
                {% if attribute_groups %}
                    <li class="nav-item">
                        <a aria-selected="false" class="nav-link" data-toggle="tab" href="#properties"
                           id="properties-tab"
                           role="tab">{{ tab_attribute }}</a>
                    </li>
                {% endif %}
