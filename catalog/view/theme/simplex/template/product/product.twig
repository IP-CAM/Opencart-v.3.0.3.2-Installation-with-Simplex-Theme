                        <div style="overflow: auto">
                            <table>
                                <thead>
                                <tr>
                                    <th style="text-align: center">Harta</th>
                                    <th>Adresa</th>
                                    <th colspan="2" style="text-align: center;">Orele de lucru</th>
                                    <th style="text-align: center;">Telefon</th>
                                    <th style="text-align: center;">Disponibilitate</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ld in location_descriptions %}
                                    <tr>
                                        <td>
                                            {% if ld.image_geo %}
                                                <a href="{{ ld.geocode }}" target="_blank"><img
                                                            alt="Map" src="{{ ld.image_geo }}"></a>
                                            {% elseif ld.is_online %}
                                                <span class="online"></span>
                                            {% endif %}
                                        </td>
                                        <td>{{ ld.address }}</td>
                                        <td class="open-cell" colspan="2">
                                            {{ ld.open }}
                                        </td>
                                        <td style="text-align: center;">{{ ld.telephone }}</td>
                                        <td>
                                            <div class="battery">
                                                {% if ld.availability_level >0 %}
                                                    <span class="cell"></span>
                                                {% endif %}
                                                {% if ld.availability_level >1 %}
                                                    <span class="cell"></span>
                                                {% endif %}
                                                {% if ld.availability_level >2 %}
                                                    <span class="cell"></span>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                        <!--TODO: Finish Table-->
                    </div>
                </div>
                <!-- Relative tab -->
                {% if products %}
                    <button aria-controls="relative" aria-expanded="false" class="collapsed"
                            data-target="#relative"
                            data-toggle="collapse" type="button">
                        Produse relative
                    </button>
                    <div aria-labelledby="relative-tab" class="tab-pane fade collapse" data-parent="#productAccordion"
                         id="relative" role="tabpanel">
                        <div class="related-slider">
                            {% for product in products %}
                                <div class="product">
                                    <a href="{{ product.href }}">
                                        <ul class="sticker">
                                            {% if product.special_percentage %}
                                                <li>
