{{ header }}
<main>
    <div class="container-fluid">
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                    {% if loop.first %}
                        <li><a href="{{ breadcrumb.href }}"><img class="lazyload" alt="Home"
                                                                 data-src="/catalog/view/theme/simplex/assets/img/home.svg"></a>
                        </li>
                    {% elseif loop.last %}
                        <li>{{ breadcrumb.text }}</li>
                    {% else %}
                        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% endif %}
                {% endfor %}
        </ul>
        <div class="page-title">
            <h1>{{ heading_title }}</h1>
        </div>
    </div>
    <div class="container-fluid">
        <div id="account">
            <div class="card">
                <h5>{{ heading_title }}</h5>
                <div id="account-form">
                    <form action="{{ action }}" method="post">
                        <label class="required" for="input-firstname">{{ entry_firstname }}</label><input class="{{ error_firstname?"has-error"}}" name="firstname" value="{{ firstname }}" placeholder="{{ entry_firstname }}" id="input-firstname" required type="text">
                        <label class="required" for="input-lastname">{{ entry_lastname }}</label><input class="{{
	                    error_firstname?"has-error"}}" type="text" name="lastname" value="{{ lastname }}" placeholder="{{ entry_lastname }}" id="input-lastname" required >
                        <input type="hidden" name="company" value="{{ company }}" placeholder="{{ entry_company }}" id="input-company"/>
                        <label for="input-address-1">{{ entry_address_1 }}</label><input type="text" class="{{ error_address1?"has-error"}}" name="address_1" value="{{ address_1 }}" placeholder="{{ entry_address_1 }}" id="input-address-1" />
                        <input type="hidden" name="address_2" value="{{ address_2 }}" placeholder="{{ entry_address_2 }}" id="input-address-2"/>
                        <label for="input-city">{{ entry_city }}</label><input class="{{ error_city?"has-error"}}" type="text" name="city" value="{{ city }}" placeholder="{{ entry_city }}" id="input-city"  />
                        <input type="hidden" class="{{ error_postcode?"has-error"}}" name="postcode" value="{{
                        postcode }}" placeholder="{{ entry_postcode }}" id="input-postcode" />
                        <label style="display: none" for="input-country">{{ entry_country }}</label>
                            <select style="display: none" class="{{ error_country?"has-error"}}"  name="country_id" id="input-country" >
                                <option value="">{{ text_select }}</option>
                                {% for country in countries %}
                                    {% if country.country_id == country_id %}
                                        <option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
                                    {% else %}
                                        <option value="{{ country.country_id }}">{{ country.name }}</option>
                                    {% endif %}
                                {% endfor %}

                            </select>
                        <label for="input-zone">{{ entry_zone }}</label>

                            <select class="{{ error_zone?"has-error"}}" name="zone_id" id="input-zone">
                            </select>

                            <div class="submit">
                            <button class="form-submit" type="submit">
                                {{ button_continue }}<span class="image-container"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <br>
            <a class="back" href="{{ back }}">{{ button_back }}</a>

        </div>
    </div>
</main>
{{ content_bottom }}
<script type="text/javascript"><!--
// Sort the custom fields
$('.form-group[data-sort]').detach().each(function() {
	if ($(this).attr('data-sort') >= 0 && $(this).attr('data-sort') <= $('.form-group').length-2) {
		$('.form-group').eq(parseInt($(this).attr('data-sort'))+2).before(this);
	}
	
	if ($(this).attr('data-sort') > $('.form-group').length-2) {
		$('.form-group:last').after(this);
	}
	
	if ($(this).attr('data-sort') == $('.form-group').length-2) {
		$('.form-group:last').after(this);
	}
	
	if ($(this).attr('data-sort') < -$('.form-group').length-2) {
		$('.form-group:first').before(this);
	}
});
//--></script> 
<script type="text/javascript"><!--
$('button[id^=\'button-custom-field\']').on('click', function() {
	var element = this;
	
	$('#form-upload').remove();
	
	$('body').prepend('<form enctype="multipart/form-data" id="form-upload" style="display: none;"><input type="file" name="file" /></form>');
	
	$('#form-upload input[name=\'file\']').trigger('click');
	
	if (typeof timer != 'undefined') {
		clearInterval(timer);
	}
	
	timer = setInterval(function() {
		if ($('#form-upload input[name=\'file\']').val() != '') {
			clearInterval(timer);
		
			$.ajax({
				url: 'index.php?route=tool/upload',
				type: 'post',
				dataType: 'json',
				data: new FormData($('#form-upload')[0]),
				cache: false,
				contentType: false,
				processData: false,
				beforeSend: function() {
					$(element).button('loading');
				},
				complete: function() {
					$(element).button('reset');
				},
				success: function(json) {
					$(element).parent().find('.text-danger').remove();
					
					if (json['error']) {
						$(element).parent().find('input').after('<div class="text-danger">' + json['error'] + '</div>');
					}
					
					if (json['success']) {
						alert(json['success']);
						
						$(element).parent().find('input').val(json['code']);
					}
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		}
	}, 500);
});
//--></script> 
