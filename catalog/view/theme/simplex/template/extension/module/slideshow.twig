<div id="slider">
  <div class="container-fluid">
    <div class="categories">
      <nav class="menu">
        <ul>
          {{ _self.catalog_links(catalog_tree, 0, 0) }}
          {% macro catalog_links(items, menu_level, parent_id) %}
            {% for category in items %}
              {% if category.parent_id == parent_id %}
                {% if menu_level == 0 %}
                  <li class="menu-item dropright">
                    <a class="menu-link dropdown-toggle" aria-expanded="false" aria-haspopup="true"
                       data-toggle="dropdown"
                       href="{{ category.href }}" role="button">
                      {% if category.image %}
                        <div class="image-container">
                          <img src="/image/{{ category.image }}" alt="{{ category.name }}">
                        </div>
                      {% endif %}
                      <span>{{ category.name }}</span>
                    </a>
                    <div class="dropdown-menu">
                      {{ _self.catalog_links(items, 1, category.category_id) }}
                    </div>
                  </li>
                {% endif %}
                {% if menu_level == 1 %}
                  <div class="category-list">
                    <h5>
                      <a href="{{ category.href }}">{{ category.name }}</a>
                    </h5>
                    <ul>
                      {{ _self.catalog_links(items, 2, category.category_id) }}
                    </ul>
                  </div>
                {% else %}
                  {% if menu_level == 2 %}
                    <li>
                      <a href="{{ category.href }}">
                        {{ category.name }}
                      </a>
                    </li>
                  {% endif %}
                {% endif %}
              {% endif %}
            {% endfor %}
          {% endmacro catalog_links %}
        </ul>
      </nav>
    </div>
    <div class="main-slider">
      {% for banner in banners %}
        <a href="{{ banner.link }}">
          <img alt="{{ banner.title }}" src="{{ banner.image }}">
        </a>
      {% endfor %}
    </div>
  </div>
</div>

