<div id="about-us">
  <div class="container-fluid">
    <div class="cards">
      {% for banner in banners %}
        <div class="mini-card">
          <div class="image-container">
            <img alt="" src="{{ banner.image_original }}">
          </div>
          <p>{{ banner.title }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<div class="categories categories-main">
  <nav class="menu">
    <ul>
      {{ _self.catalog_links(catalog_tree, 0, 0) }}
      {% macro catalog_links(items, menu_level, parent_id) %}
        {% for category in items %}
          {% if category.parent_id == parent_id %}
            {% if menu_level == 0 %}
              <li class="menu-item dropright">
                <a class="menu-link dropdown-toggle" aria-expanded="false" aria-haspopup="true"
                   data-toggle="dropdown"
                   href="{{ category.href }}" role="button">
                  {% if category.image %}
                    <div class="image-container">
                      <img src="/image/{{ category.image }}" alt="{{ category.name|capitalize }}">
                    </div>
                  {% endif %}
                  <span>{{ category.name }}</span>
                </a>
                <div class="dropdown-menu">
                  <div class="category-list">
                    <a class="dropdown-toggle category-toggle back back-category" href="{{ category.href }}">
                      {{ category.name }}
                    </a>
                  </div>
                  {{ _self.catalog_links(items, 1, category.category_id) }}
                </div>
              </li>
            {% endif %}
            {% if menu_level == 1 %}
              <div class="category-list dropdown">
                {% set flag = 0 %}
                {% for item in items if item.depth == 2 and item.parent_id == category.category_id %}
                  {% set flag = 1 %}
                {% endfor %}
                <a href="{{ category.href }}" class="{% if flag %}dropdown-toggle {% endif %}category-toggle">
                  {{ category.name }}
                </a>
                <div class="dropdown-menu">
                  <ul>
                    {{ _self.catalog_links(items, 2, category.category_id) }}
                  </ul>
                </div>
              </div>
            {% else %}
              {% if menu_level == 2 %}
                <li>
                  <a href="{{ category.href }}">
                    {{ category.name|capitalize }}
                  </a>
                </li>
              {% endif %}
            {% endif %}
          {% endif %}
        {% endfor %}
      {% endmacro catalog_links %}
