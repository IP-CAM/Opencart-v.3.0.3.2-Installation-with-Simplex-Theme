{{ header }}
<main class="{% if thumb %}gallery-bg{% else %}contacts-bg{% endif %}">
  <div class="container-fluid">
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
        {% if loop.first %}
          <li><a href="{{ breadcrumb.href }}"><img class="lazyload" alt="Home"
                                                   data-src="/catalog/view/theme/simplex/assets/img/home.svg"></a>
          </li>
        {% elseif loop.last %}
          <li>{{ breadcrumb.text }}</li>
        {% else %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
    <div class="page-title centered">
      <h1>
        {{ heading_title }}
      </h1>
      <hr>
    </div>
    <div class="project-wrapper ">
      {% if thumb %}
        <div class="card">
          <img class="lazyload" alt="Newest" class="card-img-top" src="{{ thumb }}">
        </div>
      {% endif %}
      <div class="content heading">
        <p>
          {{ short_description }}
        </p>
      </div>
      <div class="content">
        {{ description }}
      </div>
      {% if original_images %}
        <div class="slideshow">
          {% for image in original_images %}
            <div class="image">
              <img class="lazyload" alt="Main" src="{{ image.popup }}">
            </div>
          {% endfor %}
        </div>
        <div id="slides-counter"></div>
      {% endif %}
      <div class="content">
        {{ description_additional }}
      </div>

    </div>
  </div>
</main>
{{ content_bottom }}
{{ footer }}